{
	"name": "budgetarian",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
		"db:studio": "npx drizzle-kit studio --port 3000",
		"db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@prgm/sveltekit-progress-bar": "^2.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.9",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.10",
		"@types/better-sqlite3": "^7.6.10",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.12.12",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.16",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.21.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.33",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.1",
		"svelte": "5.0.0-next.136",
		"svelte-check": "^3.6.0",
		"svelte-meta-tags": "^3.1.2",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-rate-limiter": "^0.5.1",
		"sveltekit-superforms": "^2.13.1",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"tsx": "^4.10.5",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"arctic": "^1.8.1",
		"better-sqlite3": "^10.0.0",
		"bits-ui": "^0.21.7",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"drizzle-orm": "^0.30.10",
		"drizzle-zod": "^0.5.1",
		"just-extend": "^6.2.0",
		"lucia": "^3.2.0",
		"mode-watcher": "^0.3.0",
		"oslo": "^1.2.0",
		"resend": "^3.2.0",
		"svelte-radix": "^1.1.0",
		"svelte-sonner": "^0.3.24",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1"
	}
}
