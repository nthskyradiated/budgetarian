{
	"name": "budgetarian",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
		"db:studio": "npx drizzle-kit studio --port 3000",
		"db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts",
		"db:pull": "drizzle-kit introspect:sqlite",
		"db:drop": "drizzle-kit drop",
		"db:check": "drizzle-kit check:sqlite"
	},
	"devDependencies": {
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.46.0",
		"@prgm/sveltekit-progress-bar": "3.0.0-next.1",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.20",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/typography": "^0.5.14",
		"@types/better-sqlite3": "^7.6.11",
		"@types/eslint": "^8.56.11",
		"@types/node": "^20.14.14",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"autoprefixer": "^10.4.20",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.21.4",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"postcss": "^8.4.41",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "5.0.0-next.136",
		"svelte-check": "^3.8.5",
		"svelte-meta-tags": "^3.1.2",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-rate-limiter": "^0.5.2",
		"sveltekit-superforms": "^2.16.1",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.9",
		"tslib": "^2.6.3",
		"tsx": "^4.17.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"vitest": "^1.6.0",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@plunk/node": "^3.0.2",
		"arctic": "^1.9.2",
		"better-sqlite3": "^10.1.0",
		"bits-ui": "^0.21.13",
		"chart.js": "^4.4.3",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"drizzle-orm": "^0.30.10",
		"drizzle-zod": "^0.5.1",
		"formsnap": "^1.0.1",
		"just-extend": "^6.2.0",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.379.0",
		"mode-watcher": "^0.3.1",
		"oslo": "^1.2.1",
		"resend": "^3.5.0",
		"svelte-radix": "^1.1.0",
		"svelte-sonner": "^0.3.27",
		"tailwind-merge": "^2.4.0",
		"tailwind-variants": "^0.2.1"
	}
}
